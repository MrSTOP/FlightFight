<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants"
    >
    <ImageView
        android:id="@+id/rand_icon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_game_pass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/item_game_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:singleLine="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/item_game_delete_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:text="@string/delete_store"
        android:visibility="visible"
        android:focusable = "false"
        />
</LinearLayout>